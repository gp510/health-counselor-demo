# =============================================================================
# Health Counselor Assistant - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# =============================================================================
# LLM SERVICE CONFIGURATION (Required)
# =============================================================================
# Supports OpenAI, Anthropic, or any OpenAI-compatible endpoint via LiteLLM

LLM_SERVICE_ENDPOINT="https://api.openai.com/v1"
LLM_SERVICE_API_KEY="your-api-key-here"
LLM_SERVICE_PLANNING_MODEL_NAME="openai/gpt-4o-mini"
LLM_SERVICE_GENERAL_MODEL_NAME="openai/gpt-4o-mini"

# Optional: For report generation (defaults to general model if not set)
# LLM_REPORT_MODEL_NAME="openai/gpt-4o"

# Optional: Image generation model
# IMAGE_MODEL_NAME="dall-e-3"
# IMAGE_SERVICE_ENDPOINT="https://api.openai.com/v1"
# IMAGE_SERVICE_API_KEY="your-api-key-here"

# =============================================================================
# SOLACE BROKER CONFIGURATION
# =============================================================================
# Option 1: Local broker (default - requires Docker or local Solace install)
# SOLACE_BROKER_URL="ws://localhost:8008"
# SOLACE_BROKER_VPN="default"
# SOLACE_BROKER_USERNAME="default"
# SOLACE_BROKER_PASSWORD="default"

# Option 2: Solace Cloud (recommended for production)
# Get credentials from: https://console.solace.cloud > Your Service > Connect tab
SOLACE_BROKER_URL="wss://your-service.messaging.solace.cloud:443"
SOLACE_BROKER_VPN="your-vpn-name"
SOLACE_BROKER_USERNAME="solace-cloud-client"
SOLACE_BROKER_PASSWORD="your-password-here"

# Dev mode skips broker connection (for testing without Solace)
SOLACE_DEV_MODE="false"

# Topic namespace for agent discovery
NAMESPACE="workshop/"

# Event topic prefix for wearable data streaming
EVENT_TOPIC_PREFIX="health/events"

# =============================================================================
# WEB UI GATEWAY CONFIGURATION
# =============================================================================
FASTAPI_HOST="127.0.0.1"
FASTAPI_PORT="8000"

# Optional: HTTPS configuration
# FASTAPI_HTTPS_PORT="8443"
# SSL_KEYFILE="/path/to/key.pem"
# SSL_CERTFILE="/path/to/cert.pem"
# SSL_KEYFILE_PASSWORD=""

# Session security
SESSION_SECRET_KEY="change-this-to-a-random-secret-key"

# =============================================================================
# DATA CONFIGURATION
# =============================================================================
# Path to project root (for CSV data files in CSV_Data/)
DATA_PATH="/path/to/health-counselor-demo"

# SQLite database files for health agents
# These are auto-populated from CSV_Data/ on first run
BIOMARKER_AGENT_DB_NAME="/path/to/health-counselor-demo/biomarker.db"
FITNESS_AGENT_DB_NAME="/path/to/health-counselor-demo/fitness.db"
DIET_AGENT_DB_NAME="/path/to/health-counselor-demo/diet.db"
MENTAL_WELLNESS_AGENT_DB_NAME="/path/to/health-counselor-demo/mental_wellness.db"

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================

# S3 for artifact storage (optional, defaults to local filesystem)
# S3_BUCKET_NAME=""
# S3_ENDPOINT_URL=""
# S3_REGION="us-east-1"

# Logging configuration
LOGGING_CONFIG_PATH="configs/logging_config.yaml"

# Enable artifact embed resolution
ENABLE_EMBED_RESOLUTION="True"

# =============================================================================
# MCP SERVER INTEGRATIONS (Optional)
# =============================================================================
# NCBI API key for enhanced PubMed access (improves rate limits)
# Get free key at: https://www.ncbi.nlm.nih.gov/account/settings/
# NCBI_API_KEY="your-ncbi-api-key"

# =============================================================================
# OAUTH 2.0 CONFIGURATION (Optional - for enterprise LLM endpoints)
# =============================================================================
# LLM_SERVICE_OAUTH_ENDPOINT="https://your-oauth-llm-endpoint.com/v1"
# LLM_SERVICE_OAUTH_PLANNING_MODEL_NAME="your-model-name"
# LLM_SERVICE_OAUTH_GENERAL_MODEL_NAME="your-model-name"
# LLM_SERVICE_OAUTH_TOKEN_URL="https://your-auth-server.com/oauth/token"
# LLM_SERVICE_OAUTH_CLIENT_ID="your-client-id"
# LLM_SERVICE_OAUTH_CLIENT_SECRET="your-client-secret"
# LLM_SERVICE_OAUTH_SCOPE="openai"
# LLM_SERVICE_OAUTH_TOKEN_REFRESH_BUFFER_SECONDS="300"
